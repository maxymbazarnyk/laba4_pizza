@model Product


<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
    <link href="~/css/ProductDetails.css" rel="stylesheet" />
</head>
<div style=" width: 100%; height: 500px; position: absolute; left: 410px; top: 253px;">
    <form method="post">

        <figure class="pizza">
            <div class="pizza__hero">
                <img style="height: 240px" src="@Model.Image" alt="pizza" class="pizza__img">
            </div>
            <div class="pizza__content">
                <div class="pizza__title">
                    <h1 class="pizza__heading">@Model.Name 👌</h1>
                    <div class="pizza__tag pizza__tag--1">#@Model.Type</div>
                    <div class="pizza__tag pizza__tag--2">#italian</div>
                </div>
                <p class="pizza__description">Yummy veggie pizza with tasty olives, crisp peppers, fresh arugula and original italian tomato sauce.</p>
                <div class="pizza__details">
                    <div class="pizza__detail"><span class="emoji">🍕</span>850 kcal</div>
                    <div class="pizza__detail"><span class="emoji">⏱</span>30 min</div>
                    <div class="pizza__detail"><span class="emoji">⭐</span>4.7 / 5</div>
                </div>
                @if (Model.Type == ProductType.Pizza)
                {
                    <div class="pizza__details">
                        <input asp-for="Salt" style="position: absolute; left: 414px; top: 200px;" class="form-check-input" type="checkbox"><div class="pizza__detail"><span class="emoji">🧂</span>Сіль</div><br />
                        <input asp-for="Cheese" style="position: absolute; left: 494px; top: 200px;" class="form-check-input" type="checkbox"><div class="pizza__detail"><span class="emoji">🧀</span>Сир</div>


                    </div>
                }

            </div>
            <div class="pizza__price">₴@Model.Price</div>
        </figure>
        <button asp-action="Details" type="submit" class="btn btn-danger">Danger</button>
    </form>
   
</div>
